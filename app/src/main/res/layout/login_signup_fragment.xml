<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/errorView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_error_24"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="18dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/titleTextLogin"
        android:textColor="@color/home_blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/headerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sekarang Menonton Film \nSemudah Ini"
        android:padding="18dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:layout_below="@id/titleTextLogin"
        android:paddingStart="18dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/nameText"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Handphone"
        android:layout_below="@id/nameEditText"
        android:paddingStart="18dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/phoneText"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/phoneEditText"
        android:paddingStart="18dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/emailText"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="18dp"
        />

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@id/emailEditText"
        android:paddingStart="18dp"
        tools:ignore="RtlSymmetry"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/passwordText"
        android:layout_marginHorizontal="18dp"
        style="@style/Base.CardView"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/forgetPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/blue_forget_password"
        android:text="Lupa Password"
        android:layout_below="@id/passwordEditText"
        android:textAlignment="textEnd"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        />
    
    <Button
        android:id="@+id/loginSignupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/home_blue"
        android:text="Login"
        android:layout_below="@id/forgetPasswordText"
        android:layout_marginHorizontal="17dp"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/signupTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginSignupButton"
        android:textAlignment="center"
        />



</RelativeLayout>